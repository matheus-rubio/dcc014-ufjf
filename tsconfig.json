{
  "compilerOptions": {
    "target": "ES2020", // Versão do JavaScript de destino
    "module": "commonjs", // Módulo de sistema
    "outDir": "./dist", // Diretório de saída para arquivos compilados
    "rootDir": "./", // Diretório de origem dos arquivos TypeScript
    "strict": true, // Habilita checagem estrita
    "esModuleInterop": true // Permite a interoperabilidade entre módulos ES e CommonJS
  },
  "include": ["src/**/*.ts", "index.ts"], // Inclui todos os arquivos .ts no diretório src
  "exclude": ["node_modules"] // Exclui o diretório node_modules
}